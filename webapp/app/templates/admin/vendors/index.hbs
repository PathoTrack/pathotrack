<div class="ui vertical stripe segment padding-70">

	<div class="ui middle aligned stackable container padding-30">

		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Vendors</h5>
		</div>

		<table class="ui celled table">
		 	<thead>
		 	  	<tr>
		 	  		<th>Name</th>
			 	  	<th>Discount</th>
			 	  	<th>Service Fee</th>
			 	  	<th>Minimum Amount For Free Visit</th>
			 	  	<th>Single Fee Visit</th>
			 	  	<th>Double Fee Visit</th>
			 	  	<th>Email</th>
			 	  	<th></th>
			 	  	<th></th>
		 		</tr>
		 	</thead>
		 	<tbody>
		 		{{#each model as |vendor|}}
			 	 	<tr>
			 	 	  	<td>{{vendor.name}}</td>
			 	 	  	<td>{{vendor.discount}}</td>
			 	 	  	<td>{{vendor.service_fee}}</td>
			 	 	  	<td>{{vendor.minimum_amount_for_free_visit}}</td>
			 	 	  	<td>{{vendor.single_visit_fee}}</td>
			 	 	  	<td>{{vendor.double_visit_fee}}</td>
			 	 	  	<td>{{vendor.email}}</td>
			 	 	  	<td>{{#link-to "admin.vendors.edit" vendor.id classNames="edit_button"}}<i class="edit icon"></i> Edit{{/link-to}}</td>
			 	 	  	<td class="delete_button"><button {{action "delete" vendor}}><i class="trash icon"></i> Delete</button></td>
			 	 	</tr>
			 	 {{/each}}
		 	</tbody>
		</table>

		{{#link-to "admin.vendors.new" classNames="add_button"}}<i class="plus icon"></i>{{/link-to}}

    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}

	</div>

</div>
