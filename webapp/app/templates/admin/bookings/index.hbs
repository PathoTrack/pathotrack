<div class="ui vertical stripe segment padding-70">

	<div class="ui middle aligned stackable container padding-30">

		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Bookings</h5>
		</div>

		<div class="list_table">
  			<div class="content">
    			<div class="row bg-brand clearfix">
      				<div class="row title-row max-width-1170 clearfix">
				        <div class="col col-30 col-center color-white title_head">Booking Slot</div>
				        <div class="col col-25 col-center color-white title_head">User</div>
				        <div class="col col-25 col-center color-white title_head">Vendor</div>
				        <div class="col col-20 no-content"></div>
      				</div>
    			</div>
    			<div class="row clearfix">
      				<div class="row title-row max-width-1170 clearfix">
      					{{#each model as |booking|}}
      					<div class="content-row clearfix">
					        <div class="col col-30 col-center title_head">{{booking.date}} - ({{booking.booking_slot.start_time}} - {{booking.booking_slot.end_time}})</div>
					        <div class="col col-25 col-center title_head">{{booking.user.name}}</div>
					        <div class="col col-25 col-center title_head">{{booking.vendor.user.name}}</div>
					        <div class="col col-20 no-content title_head action_buttons">
					        	<div class="pull-right">
					        		{{#link-to "admin.bookings.edit" booking.id classNames="edit_button"}}<i class="edit icon"></i> Edit{{/link-to}}
					 	 	  		<div class="delete_button">
					 	 	  			<button {{action "delete" booking}}><i class="trash icon"></i> Delete</button>
					 	 	  		</div>
					        	</div>
					        </div>
					    </div>
					    {{/each}}
      				</div>
    			</div>
    		</div>
    	</div>

		{{#link-to "admin.bookings.new" classNames="add_button"}}<i class="plus icon"></i>{{/link-to}}

    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}

	</div>

</div>