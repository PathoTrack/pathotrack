<div class="ui vertical stripe segment padding-70">

	<div class="ui middle aligned stackable container padding-30">

		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Staff tests</h5>
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Tests</h5>
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Vendors</h5>
		</div>

		<table class="ui celled table">
		 	<thead>
		 	  	<tr>
		 	  		<th>Name</th>
			 	  	<th>Description</th>
			 	  	<th>Price</th>
			 	  	<th>Half Day Fasting</th>
			 	  	<th>Special Instructions</th>
			 	  	<th>Number of Visits</th>
		 		</tr>
		 	</thead>
		 	<tbody>
		 		{{#each model as |test|}}
			 	 	<tr>
			 	 	  	<td>{{test.name}}</td>
			 	 	  	<td>{{test.description}}</td>
			 	 	  	<td>{{test.price}}</td>
			 	 	  	<td>{{test.is_half_day_fasting_applicable}}</td>
			 	 	  	<td>{{test.special_instructions}}</td>
			 	 	  	<td>{{test.number_of_visits_required}}</td>
			 	 	</tr>
			 	 {{/each}}
		 	</tbody>
		</table>

    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}

	</div>

</div>
