<div class="ui vertical stripe segment padding-70">

	<div class="ui middle aligned stackable container padding-30">

		<div class="pull-right">
		  	<div class="search-box">
	        	{{input value=searchField enter="search" placeholder="Search"}}
	      	</div>
	      	<button class="search_button" {{action 'search'}}><i class="search icon"></i></button>
	    </div>

		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Packages</h5>
		</div>

		<div class="list_table">
  			<div class="content">
    			<div class="row bg-brand clearfix">
      				<div class="row title-row max-width-1170 clearfix">
				        <div class="col col-10 col-center color-white title_head">Name</div>
				        <div class="col col-15 col-center color-white title_head">Description</div>
				        <div class="col col-10 col-center color-white title_head">Price</div>
				        <div class="col col-10 col-center color-white title_head">Discount</div>
				        <div class="col col-10 col-center color-white title_head">Half Day Fasting</div>
				        <div class="col col-10 col-center color-white title_head">Special Instructions</div>
				        <div class="col col-10 col-center color-white title_head">Number of Visits</div>
				        <div class="col col-15 no-content"></div>
      				</div>
    			</div>
    			<div class="row clearfix">
      				<div class="row title-row max-width-1170 clearfix">
      					{{#each model as |package|}}
      					<div class="content-row clearfix">
					        <div class="col col-10 col-center title_head">{{package.name}}</div>
					        <div class="col col-15 col-center title_head">{{package.description}}</div>
					        <div class="col col-10 col-center title_head">{{package.price}}</div>
					        <div class="col col-10 col-center title_head">
								{{#if package.discount}}
					        		{{package.discount}}
					        	{{else}}
					        		-
					        	{{/if}}
					        </div>
					        <div class="col col-10 col-center title_head">{{package.is_half_day_fasting_applicable}}</div>
					        <div class="col col-10 col-center title_head">
					        	{{#if package.special_instructions}}
					        		{{package.special_instructions}}
					        	{{else}}
					        		-
					        	{{/if}}
					        </div>
					        <div class="col col-10 col-center title_head">{{package.number_of_visits_required}}</div>
					        <div class="col col-15 no-content title_head action_buttons">
					        	{{#link-to "staff.packages.edit" package.id classNames="edit_button"}}<i class="edit icon"></i> Edit{{/link-to}}
				 	 	  		<div class="delete_button">
				 	 	  			<button {{action "delete" package}}><i class="trash icon"></i> Delete</button>
				 	 	  		</div>
					        </div>
					    </div>
					    {{/each}}
      				</div>
    			</div>
    		</div>
    	</div>

		{{#link-to "staff.packages.new" classNames="add_button"}}<i class="plus icon"></i>{{/link-to}}

    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}

	</div>

</div>
