<div class="ui vertical stripe segment padding-70">

	<label class="item item-input item-input-custom item-stacked-label">
    	{{input value=searchField enter="search" placeholder="Search"}}
  	</label>

	<div class="ui middle aligned stackable container padding-30">

		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Packages</h5>
		</div>

		<table class="ui celled table">
		 	<thead>
		 	  	<tr>
		 	  		<th>Name</th>
			 	  	<th>Description</th>
			 	  	<th>Price</th>
			 	  	<th>Discount</th>
			 	  	<th>Half Day Fasting</th>
			 	  	<th>Special Instructions</th>
			 	  	<th>Number of Visits</th>
			 	  	<th>Is Profile Test</th>
			 	  	<th></th>
			 	  	<th></th>
		 		</tr>
		 	</thead>
		 	<tbody>
		 		{{#each model as |package|}}
			 	 	<tr>
			 	 	  	<td>{{package.name}}</td>
			 	 	  	<td>{{package.description}}</td>
			 	 	  	<td>{{package.price}}</td>
			 	 	  	<td>{{package.discount}}</td>
			 	 	  	<td>{{package.is_half_day_fasting_applicable}}</td>
			 	 	  	<td>{{package.special_instructions}}</td>
			 	 	  	<td>{{package.number_of_visits_required}}</td>
			 	 	  	<td>{{package.is_profile_test}}</td>
			 	 	  	<td>{{#link-to "staff.packages.edit" package.id classNames="edit_button"}}<i class="edit icon"></i> Edit{{/link-to}}</td>
			 	 	  	<td class="delete_button"><button {{action "delete" package}}><i class="trash icon"></i> Delete</button></td>
			 	 	</tr>
			 	 {{/each}}
		 	</tbody>
		</table>

		{{#link-to "staff.packages.new" classNames="add_button"}}<i class="plus icon"></i>{{/link-to}}

    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}

	</div>

</div>
