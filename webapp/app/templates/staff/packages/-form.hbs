<form class="ui vertical stripe segment form" {{action "save" on="submit"}}>
  <div class="field">
    <label>Name</label>
    {{input value=model.pack.name type="text" name="name" placeholder="Name"}}
  </div>
  <div class="field">
    <label>Description</label>
    {{textarea value=model.pack.description name="description" placeholder="Description"}}
  </div>
  <div class="field">
    <label>Price</label>
    {{input value=model.pack.price type="number" name="price" placeholder="Price"}}
  </div>
  <div class="field">
    <label>Discount</label>
    {{input value=model.pack.discount type="number" name="discount" placeholder="Discount"}}
  </div>
  <div class="field">
    <div class="ui checkbox">
      {{input type="checkbox" checked=model.pack.is_half_day_fasting_applicable}}
      <label>Half Day Fasting</label>
    </div>
  </div>
  <div class="field">
    <label>Special Instructions</label>
    {{textarea name="special-instructions" placeholder="Special Instructions"}}
  </div>
  <div class="field">
    <label>Number of Visits</label>
    {{input value=model.pack.number_of_visits_required type="number" name="number-of-visits" placeholder="Number of Visits"}}
  </div>
  <div class="field">
    <label>Turn around time</label>
    {{input value=model.pack.turn_around_time type="number" name="turn-around-time" placeholder="Turn around time"}}
  </div>
  <button class="ui button" type="submit">Submit</button>
  <button class="ui button" {{action "cancel"}}>Cancel</button>
</form> 
