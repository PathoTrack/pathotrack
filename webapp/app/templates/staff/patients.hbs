<div class="ui vertical stripe segment padding-70">
	<div class="ui middle aligned stackable container padding-30">
		<div class="max-width-1170 clearfix section-header-wrap margin-top-0 inline-block">
		  <h5 class="uppercase regular pull-left margin-0 custom-header">Patients</h5>
		</div>
		<div class="list_table">
  			<div class="content">
    			<div class="row bg-brand clearfix">
      				<div class="row title-row max-width-1170 clearfix">
				        <div class="col col-10 col-center color-white title_head">Name</div>
				        <div class="col col-20 col-center color-white title_head">Email</div>
				        <div class="col col-10 col-center color-white title_head">DOB</div>
				        <div class="col col-10 col-center color-white title_head">Gender</div>
				        <div class="col col-20 col-center color-white title_head">Phone Number</div>
				        <div class="col col-30 col-center color-white title_head">Address</div>
      				</div>
    			</div>
    			<div class="row clearfix">
      				<div class="row title-row max-width-1170 clearfix">
      					{{#each model as |patient|}}
      					<div class="content-row clearfix">
					        <div class="col col-10 col-center title_head">{{patient.name}}</div>
					        <div class="col col-20 col-center title_head">{{patient.email}}</div>
					        <div class="col col-10 col-center title_head">
					        	{{#if patient.dob}}
					        		{{patient.dob}}
					        	{{else}}
					        		-
					        	{{/if}}
					        </div>
					        <div class="col col-10 col-center title_head">
					        	{{#if patient.sex}}
					        		{{patient.sex}}
					        	{{else}}
					        		-
					        	{{/if}}
					        </div>
					        <div class="col col-20 col-center title_head">
					        	{{#if patient.phone_number}}
					        		{{patient.phone_number}}
					        	{{else}}
					        		-
					        	{{/if}}
					        </div>
					        <div class="col col-30 col-center title_head">
					        	{{patient.address.address_line_1}}
					        	{{patient.address.address_line_2}}
					        	{{patient.address.pincode}}
					        	{{patient.address.special_instructions}}
					        	{{patient.address.suburb}}
					        	{{patient.address.city}}
					        	{{patient.address.latitude}}
					        	{{patient.address.longitude}}
					        </div>
					    </div>
					    {{/each}}
      				</div>
    			</div>
    		</div>
    	</div>
    	{{infinity-loader infinityModel=model loadingText="" loadedText="Woohoo! You've loaded everything."}}
	</div>
</div>